@using Blog.Entity.Entities
@{
    ViewBag.Title = "Genre-Edit";
}
@model Genre
<h2>Edit</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                
                <div class="panel-body">

                    @if (ViewBag.IsSuccess != null && ViewBag.IsSuccess == false)
                     {
                       <div class="alert alert-danger">@ViewBag.Message</div>
                     }

                    @using (Html.BeginForm())
                     {

                      @Html.AntiForgeryToken()
                      @Html.HiddenFor(x => x.Id)
                      <div class="form-group">
                      <label class="col-lg-2 control-label">genre</label>

                      <div class="col-lg-10">
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                       </div>
                      </div>
                       <div class="form-group">
                      <label class="col-lg-2 control-label">description</label>

                      <div class="col-lg-10">
                        <span class="text-danger">@Html.ValidationMessageFor(x => x.Description)</span>
                        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                      </div>
                      </div>

                      <div class="col-lg-offset-2 col-lg-10">
                      <input class="btn btn-primary" type="submit" name="name" value="save" />
                      </div>

                     }



                </div>
</section>
        </div>
    </div>
</div>