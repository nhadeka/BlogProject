@using Blog.Entity.Entities
@{
    ViewBag.Title = "GenreAdd";
}
@model Genre
<div class="text-center">
    @if (ViewBag.IsSuccess != null && ViewBag.IsSuccess == false)
    {
        <div class="alert alert-danger">@ViewBag.Message</div>
    }
</div>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">

            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(false)
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">genre</label>
                        <div class="col-sm-10">
                            <span class="text-danger">@Html.ValidationMessageFor(x => x.Name)</span>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control"})

                        </div>
                    </div>
                
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">description</label>
                        <div class="col-sm-10">
                            <span class="text-danger">@Html.ValidationMessageFor(x => x.Description)</span>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control"})

                        </div>
                    </div>


                    <div class="col-lg-offset-2 col-lg-10">
                        <input class="btn btn-primary" type="submit" name="name" value="save" />
                    </div>

                }

            </div>
        </section>

    </div>
</div>
