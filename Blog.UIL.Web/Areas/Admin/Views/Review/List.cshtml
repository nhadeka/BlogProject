@using Blog.Entity.Entities
@{
    ViewBag.Title = "reviews";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<Review>
@helper AdjustContent(string text)
    {
if (text.Length > 300)
{
            <p>@text.Substring(0, 300)</p>
}
else
{
            @text
    }
}
        <section class="panel">

            <div class="panel-body">
                <div class="adv-table editable-table ">
                    <div class="clearfix">
                        <div class="btn-group">
                            @Html.ActionLink("add review", "add", "review", new { area = "Admin" }, new { @class = "  btn btn-success btn-sm " })

                        </div>

                    </div>
                    <div class="space15"></div>
                    <table class="table table-striped table-hover table-bordered" id="editable-sample">
                        <thead>
                            <tr>
                                <th class="text-center">image</th>
                                <th class="text-center">title</th>
                                <th class="text-center">content</th>
                                <th class="text-center">genre</th>
                                <th class="text-center">addition date</th>

                                <th class="text-center">manage</th>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (Review item in Model)
                            {
                                <tr class="">
                                    <td align="center"><img src="@item.Picture.SmPic" /></td>
                                    <td align="center">@item.Title</td>
                                    <td>@AdjustContent(item.Content)</td>
                                   
                                    <td align="center">@item.Genre.Name</td>
                                    <td align="center">@item.AdditionDate.ToShortDateString()</td>


                                    <td align="center">


                                        <a class="btn btn-primary btn-sm" href="/admin/review/edit/@item.Id">
                                            edit
                                            <i class="icon-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/admin/review/delete/@item.Id">
                                            delete
                                            <i class="icon-trash "></i>
                                        </a>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </section>

